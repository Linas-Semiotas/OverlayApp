<UserControl x:Class="OverlayApp.Views.ModuleManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OverlayApp.Views"
             mc:Ignorable="d">
    <Grid Margin="4,0,0,4" Background="{DynamicResource B_Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Background="{DynamicResource B_BackgroundAlt}" Height="50">
            <TextBlock Text="Module Manager"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource B_Text}"/>
        </Border>
        
        <!-- Import Button -->
        <Border Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="{DynamicResource B_BackgroundPrimary}"
                BorderBrush="{DynamicResource B_BackgroundPrimary}"
                BorderThickness="0,3,0,3">
            <Grid>
                <Button x:Name="ImportModuleButton"
                        Content="Import Module"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        FontSize="16"
                        Width="198"
                        Height="40"
                        Style="{StaticResource HoverButtonStyle}"/>
            </Grid>
            
        </Border>
        <!-- ScrollViewer for Module List -->
        <Border Grid.Row="2" Background="{DynamicResource B_BackgroundAlt}" Padding="4">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="14" Text="Enabled" Foreground="{DynamicResource B_Text}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-10,0,0,0"/>
                <TextBlock FontSize="14" Grid.Column="1" Text="Module" Foreground="{DynamicResource B_Text}" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock FontSize="14" Grid.Column="2" Text="Version" Foreground="{DynamicResource B_Text}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock FontSize="14" Grid.Column="3" Text="Action" Foreground="{DynamicResource B_Text}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource SlimVerticalScrollBar}" />
            </ScrollViewer.Resources>
            <StackPanel x:Name="ModuleListPanel">
                <!-- Populated dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
