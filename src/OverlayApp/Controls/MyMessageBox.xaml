<UserControl x:Class="OverlayApp.Controls.MyMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400"
             HorizontalAlignment="Center"
             VerticalAlignment="Center">
    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource C_Border}" />
    </UserControl.Resources>

    <Border x:Name="ContainerBorder"
            Style="{StaticResource MessageBoxStandard}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            Padding="20"
            CornerRadius="10"
            Background="{StaticResource B_BackgroundPrimary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Input row -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Message -->
            <TextBlock x:Name="MessageText"
                       Grid.Row="0"
                       Style="{StaticResource DialogText}"
                       Margin="0,0,0,10"/>

            <!-- Input (collapsed unless prompt) -->
            <StackPanel x:Name="InputPanel"
                        Grid.Row="1"
                        Visibility="Collapsed">
                <TextBox x:Name="InputBox"
                         Style="{StaticResource DialogInput}"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"/>
        </Grid>
    </Border>
</UserControl>
