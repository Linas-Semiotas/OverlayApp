<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- BackgroundPrimary -->
    <Color x:Key="C_BackgroundPrimary">#FF1E1E1E</Color>
    <SolidColorBrush x:Key="B_BackgroundPrimary" Color="{StaticResource C_BackgroundPrimary}"/>

    <!-- BackgroundAlt -->
    <Color x:Key="C_BackgroundAlt">#FF252525</Color>
    <SolidColorBrush x:Key="B_BackgroundAlt" Color="{StaticResource C_BackgroundAlt}"/>

    <!-- Surface -->
    <Color x:Key="C_Surface">#FF2E2E2E</Color>
    <SolidColorBrush x:Key="B_Surface" Color="{StaticResource C_Surface}"/>

    <!-- SurfaceSelect -->
    <Color x:Key="C_SurfaceSelect">#FF424242</Color>
    <SolidColorBrush x:Key="B_SurfaceSelect" Color="{StaticResource C_SurfaceSelect}"/>

    <!-- SurfaceHover -->
    <Color x:Key="C_SurfaceHover">#FF3A3A3A</Color>
    <SolidColorBrush x:Key="B_SurfaceHover" Color="{StaticResource C_SurfaceHover}"/>

    <!-- Border -->
    <Color x:Key="C_Border">#FF777777</Color>
    <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>

    <!-- SurfaceNeutral -->
    <Color x:Key="C_SurfaceNeutral">#FFCCCCCC</Color>
    <SolidColorBrush x:Key="B_SurfaceNeutral" Color="{StaticResource C_SurfaceNeutral}"/>

    <!-- Text -->
    <Color x:Key="C_Text">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>

    <!-- Active -->
    <Color x:Key="C_Active">#FFFFCC00</Color>
    <SolidColorBrush x:Key="B_Active" Color="{StaticResource C_Active}"/>

    <!-- Inactive -->
    <Color x:Key="C_Inactive">#FF555555</Color>
    <SolidColorBrush x:Key="B_Inactive" Color="{StaticResource C_Inactive}"/>

</ResourceDictionary>
