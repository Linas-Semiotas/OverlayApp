<UserControl x:Class="OverlayApp.Modules.Clock.ClockModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid Background="Transparent" SnapsToDevicePixels="True">
        <Border x:Name="Bg"
                CornerRadius="4"
                Background="{DynamicResource B_Surface}"
                BorderBrush="{DynamicResource B_Border}"
                BorderThickness="1"
                Opacity="0.6"/>

        <Grid x:Name="Pad" Margin="8">
            <!-- We align THIS viewbox per settings so it actually moves -->
            <Viewbox x:Name="Scaler" Stretch="Uniform" StretchDirection="Both"
                     HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel x:Name="Stack" Orientation="Vertical" Margin="0">
                    <TextBlock x:Name="TimeBlock"
                               Text="00:00:00"
                               Foreground="{DynamicResource B_Text}"
                               TextAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.LayoutTransform>
                            <ScaleTransform x:Name="TimeScale" ScaleX="1" ScaleY="1"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                    <TextBlock x:Name="DateBlock"
                               Text=""
                               Foreground="{DynamicResource B_Text}"
                               Opacity="0.85"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>