<UserControl x:Class="OverlayApp.Modules.Clock.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="530" Padding="12"
             Background="{DynamicResource B_BackgroundPrimary}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Width="376">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Time format -->
                <RowDefinition Height="Auto"/>
                <!-- Date format -->
                <RowDefinition Height="Auto"/>
                <!-- Show date -->
                <RowDefinition Height="Auto"/>
                <!-- Show weekday -->
                <RowDefinition Height="Auto"/>
                <!-- Time size ratio -->
                <RowDefinition Height="Auto"/>
                <!-- Padding -->
                <RowDefinition Height="Auto"/>
                <!-- Opacity -->
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Time format"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,6,10,2"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Date format"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Show date"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Show weekday"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Time size ratio"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Padding (px)"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Background opacity"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>

            <ComboBox x:Name="TimeFormatBox" Grid.Row="0" Grid.Column="1"
                Style="{DynamicResource CustomComboBox}"
                Width="Auto" HorizontalAlignment="Stretch" Margin="0,4,0,2">
                <ComboBoxItem Content="HH:mm:ss"/>
                <ComboBoxItem Content="HH:mm"/>
                <ComboBoxItem Content="H:mm:ss"/>
                <ComboBoxItem Content="h:mm tt"/>
                <ComboBoxItem Content="HH:mm:ss.fff"/>
            </ComboBox>

            <ComboBox x:Name="DateFormatBox" Grid.Row="1" Grid.Column="1"
                Style="{DynamicResource CustomComboBox}"
                Width="Auto" HorizontalAlignment="Stretch" Margin="0,6,0,2">
                <ComboBoxItem Content="yyyy-MM-dd"/>
                <ComboBoxItem Content="dd.MM.yyyy"/>
                <ComboBoxItem Content="MMM dd, yyyy"/>
                <ComboBoxItem Content="dd MMM yyyy"/>
                <ComboBoxItem Content="yyyy-MM"/>
            </ComboBox>

            <CheckBox x:Name="ShowDateBox" Grid.Row="2" Grid.Column="1"
                Style="{DynamicResource CustomCheckBox}"
                HorizontalAlignment="Center" Margin="0,8,0,2"/>

            <CheckBox x:Name="ShowWeekdayBox" Grid.Row="3" Grid.Column="1"
                Style="{DynamicResource CustomCheckBox}"
                HorizontalAlignment="Center" Margin="0,8,0,2"/>

            <Slider x:Name="TimeScaleSlider" Grid.Row="4" Grid.Column="1"
                HorizontalAlignment="Stretch"
                Minimum="1.0" Maximum="2.0" Value="1.0" TickFrequency="0.1"
                IsSnapToTickEnabled="True" Margin="0,8,0,2"/>

            <Slider x:Name="PaddingSlider" Grid.Row="5" Grid.Column="1"
              HorizontalAlignment="Stretch"
              Minimum="0" Maximum="32" Value="8" Margin="0,8,0,2"/>

            <Slider x:Name="OpacitySlider" Grid.Row="6" Grid.Column="1"
              HorizontalAlignment="Stretch"
              Minimum="0" Maximum="1" Value="0.6"
              TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,8,0,2"/>
        </Grid>
    </ScrollViewer>
</UserControl>