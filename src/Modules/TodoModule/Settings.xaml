<UserControl x:Class="OverlayApp.Modules.Todo.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="530" Padding="12"
             Background="{DynamicResource B_BackgroundPrimary}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Width="376">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Show completed"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <CheckBox x:Name="ShowCompletedBox" Grid.Row="0" Grid.Column="1"
                Style="{DynamicResource CustomCheckBox}"
                HorizontalAlignment="Center" Margin="0,8,0,2"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Done at bottom"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <CheckBox x:Name="DoneBottomBox" Grid.Row="1" Grid.Column="1"
                Style="{DynamicResource CustomCheckBox}"
                HorizontalAlignment="Center" Margin="0,8,0,2"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Item font size"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <Slider x:Name="ItemFontSizeSlider" Grid.Row="2" Grid.Column="1"
              Minimum="12" Maximum="24" Value="16" TickFrequency="1"
              IsSnapToTickEnabled="True" Margin="0,8,0,2"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Background opacity"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <Slider x:Name="OpacitySlider" Grid.Row="3" Grid.Column="1"
              Minimum="0.3" Maximum="1.0" Value="0.85"
              TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,8,0,2"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Wrap long items"
                 FontSize="16" Foreground="{DynamicResource B_Text}" Margin="0,10,10,2"/>
            <CheckBox x:Name="WrapLongItemsBox" Grid.Row="4" Grid.Column="1"
                Style="{DynamicResource CustomCheckBox}"
                HorizontalAlignment="Center" Margin="0,8,0,2"/>
        </Grid>
    </ScrollViewer>
</UserControl>
